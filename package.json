  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/godot-mcp/godot-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/godot-mcp/godot-mcp/issues"
  },
  "homepage": "https://github.com/godot-mcp/godot-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zx": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
