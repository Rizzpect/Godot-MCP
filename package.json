{
  "name": "godot-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Godot Engine - Enables AI assistants to interact with Godot projects",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "godot-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
